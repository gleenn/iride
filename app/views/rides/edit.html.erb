<% content_for :header do-%>
<h1>Editing ride</h1>
<% end -%>

<% form_for(@ride) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :duration %><br />
    <%= f.text_field :duration %>
  </p>
  <p>
    <%= f.label :distance %><br />
    <%= f.text_field :distance %>
  </p>
  <p>
    <%= f.label :average_speed %><br />
    <%= f.text_field :average_speed %>
  </p>
  <p>
    <%= f.label :max_speed %><br />
    <%= f.text_field :max_speed %>
  </p>
  <p>
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @ride %> |
<%= link_to 'Back', rides_path %>
