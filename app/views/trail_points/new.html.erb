<h1>New trail point for <%= @trail.name.capitalize %></h1>

<% form_for([@trail, @trail_point]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :latitude %><br />
    <%= f.text_field :lat %>
  </p>
  <p>
    <%= f.label :longitude %><br />
    <%= f.text_field :long %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', trail_trail_points_path(@trail) %>
